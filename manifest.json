{
  "manifest_version": 3,
  "name": "Claude UI Enhancement",
  "version": "1.0",
  "description": "Enhances the Claude.ai interface",
  "permissions": ["scripting"],
  "host_permissions": ["https://claude.ai/*"],
  "content_scripts": [{
    "matches": ["https://claude.ai/*"],
    "js": ["content.js"],
    "run_at": "document_end"
  }]
}